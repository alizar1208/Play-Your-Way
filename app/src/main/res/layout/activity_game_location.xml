<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">




    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.priyanka.mapsdemo.MapsActivity"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" ></fragment>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="3dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/dis"
        android:background="@drawable/inputtext"
        android:text="Distance"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:layout_below="@+id/dis"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="3dp"
        android:id="@+id/place"
        android:background="@drawable/inputtext"
        android:text="Place"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_alignParentBottom="true"
    android:layout_height="70dp">

    <Button
        android:layout_width="150dp"
        android:id="@+id/addmarker"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button"
        android:text="Add Marker"
        />
    <Button
        android:id="@+id/B_hopistals"
        android:layout_width="150dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button"
        android:layout_toRightOf="@+id/addmarker"
        android:layout_marginLeft="30dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Save" />
</RelativeLayout>
</RelativeLayout>